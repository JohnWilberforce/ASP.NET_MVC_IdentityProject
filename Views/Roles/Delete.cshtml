@model IdentityFromScratch.Models.RoleViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<string> myusers = ViewBag.myusers;
}

<h1>Delete</h1>

@{

    if (myusers.Count>0)
    {
        <p  class="text-danger">This Role has @myusers.Count Users in it.  The list of users is:</p>
        foreach( var user in myusers)
        {
            <p class=text-primary>@user</p><br>
        }
        <h2 class="text-secondary">It is not recomended to delete a role with users in it, but doing so DOES NOT delete the users...</h2>
    }

 }
    
    


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>RoleModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
